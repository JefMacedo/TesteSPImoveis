@model IEnumerable<TesteSPImoveis.Models.Imovel>

@{
    ViewData["Title"] = "Imoveis";
}


<div class="p-5">
    <div class="border border-light border-3 rounded">
        <div class="container">
            <div class="row">
                <div class="col-10">
                    <h5>Imóveis cadastrados</h5>
                </div>
                <div class="col-2">
                    <button class="btn btn-sm btn-outline-success novoImovel">Novo Imóvel</button>
                </div>

                <hr />

                <div class="p-5 rounded shadow-sm" id="divTabelaImovel">
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalConfirma" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
            </div>
            <div id="modalFooter" class="modal-footer"></div>
        </div>
    </div>
</div>

<div id="modalImovel" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title"></h6>
            </div>

            <div class="modal-body">
                <input type="hidden" class="form-control form-control-sm imovelId" />

                <div class="form-group">
                    <label>Código do cliente</label>
                    <input type="number" class="form-control form-control-sm clienteId" />
                    <span class="text-danger erroClienteId d-none"></span>
                </div>

                <div class="form-group">
                    <label>Cidade</label>
                    <input type="text" class="form-control form-control-sm cidade" />
                    <span class="text-danger erroCidade d-none"></span>
                </div>

                <div class="form-group">
                    <label>Bairro</label>
                    <input type="text" class="form-control form-control-sm bairro" />
                    <span class="text-danger erroBairro d-none"></span>
                </div>

                <div class="form-group">
                    <label>Rua</label>
                    <input type="text" class="form-control form-control-sm rua" />
                    <span class="text-danger erroRua d-none"></span>
                </div>

                <div class="form-group">
                    <label>Número</label>
                    <input type="number" class="form-control form-control-sm numero" />
                    <span class="text-danger erroNumero d-none"></span>
                </div>

                <div class="form-group">
                    <label>Complemento</label>
                    <input type="text" class="form-control form-control-sm complemento" />
                    <span class="text-danger erroComplemento d-none"></span>
                </div>
            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <input type="button" value="Salvar" class="btn btn-sm btn-outline-success btnSalvar" />
                    <input type="button" value="Cancelar" class="btn btn-sm btn-light" data-bs-dismiss="modal" />
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/Imovel.js"></script>
}